{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "Unofficial Weather Graphql Wrapper from API BMKG (Badan Meteorologi, Klimatologi, dan Geofisika) website: https://data.bmkg.go.id",
  "scripts": {
    "build": "tsc && cp -r src/schema dist/schema",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.4",
    "@graphql-tools/merge": "^8.3.12",
    "apollo-server": "^3.12.0",
    "graphql": "^16.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
}
